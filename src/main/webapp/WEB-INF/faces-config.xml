<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/confirmVerification.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>logged</from-outcome>
            <to-view-id>/views/fields.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>isLogged</from-outcome>
            <to-view-id>/views/fields.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>isNotLogged</from-outcome>
            <to-view-id>/views/login.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/deleteField.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/fields.xhtml?faces-redirect=true</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/success.xhtml?faces-redirect=true</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>